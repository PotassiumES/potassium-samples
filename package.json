{
  "name": "potassium-samples",
  "version": "0.1.0",
  "description": "Sample uses of PotassiumES",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run host",
    "host": "http-server .",
    "collect-static": "./scripts/collect-static.sh",
    "style-site": "postcss ./site.kss -o ./static/site.css",
    "style-grid": "postcss ./grid/app.kss -o ./static/grid/app.css",
    "style-hello-world": "postcss ./hello-world/app.kss -o ./static/hello-world/app.css",
    "style-single-page-app": "postcss ./single-page-app/app.kss -o ./static/single-page-app/app.css",
    "build-grid": "npm run style-grid && rollup -c grid/rollup.config.js",
    "build-hello-world": "npm run style-hello-world && rollup -c hello-world/rollup.config.js",
    "build-single-page-app": "npm run style-single-page-app && rollup -c single-page-app/rollup.config.js",
    "build": "npm run collect-static && npm run style-site && npm run build-grid && npm run build-hello-world && npm run build-single-page-app",
    "precommit": "pretty-quick --staged",
    "lint": "eslint hello-world single-page-app grid",
    "prettier-grid": "prettier --write grid/**/*.js grid/**/*.js",
    "prettier-hello-world": "prettier --write hello-world/**/*.js hello-world/**/*.js",
    "prettier-single-page-app": "prettier --write single-page-app/**/*.js single-page-app/**/*.js",
    "prettier": "npm run prettier-grid && npm run prettier-hello-world && npm run prettier-single-page-app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PotassiumES/potassium-samples.git"
  },
  "keywords": [
    "webxr",
    "ar",
    "vr",
    "potassiumes",
    "javascript-framework"
  ],
  "author": "Trevor F. Smith <trevor@transmutable.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PotassiumES/potassium-samples/issues"
  },
  "homepage": "https://github.com/PotassiumES/potassium-samples#readme",
  "prettier": {
    "semi": false,
    "useTabs": true,
    "printWidth": 120,
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier",
      "eslint:recommended"
    ],
    "rules": {
      "no-var": "warn",
      "no-undef": "off",
      "no-console": "off",
      "prefer-const": "warn",
      "no-unused-vars": "off"
    }
  },
  "eslintIgnore": [
    "hello-world/build.js",
    "single-page-app/build.js"
  ],
  "devDependencies": {
    "http-server": "^0.11.1",
    "postcss": "^7.0.4",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "postcss-potassium": "git+https://github.com:PotassiumES/postcss-potassium.git",
    "potassium-components": "git+https://github.com/PotassiumES/potassium-components.git",
    "potassium-es": "git+https://github.com/PotassiumES/potassium-es.git",
    "precss": "^3.1.2",
    "rollup": "^0.62.0",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "prettier": "^1.13.7"
  },
  "dependencies": {}
}
