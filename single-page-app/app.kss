@import url("potassium-es/styles/potassium-es.kss");
@import url("potassium-components/styles/potassium-components.kss");

/*
App specific styles
*/

.dom.masthead-component {
	margin-bottom: 40px;
}

.dom.views-component > .dom.heading-component {
	font-size: var(--page-font-size-4);
}

.dom.views-component > .dom.component {
	padding: 0 var(--page-app-content-padding);
}

.dom.views-component {
	max-width: 100%;
}

/*** FrontComponent ***/

/*** AccountComponent ***/

.dom.about-component > .dom.heading-component {
	margin-bottom: var(--inner-section-margin);
}

.dom.about-component > .dom.label-component {
	display: block;
	margin-bottom: 20px;
	line-height: 20px;
}

.dom.about-component > .dom.image-component > img {
	margin: var(--inner-section-margin) 0;
	max-width: 100%;
}

@media (min-width: 576px){
	.dom.about-component {
		max-width: 576px;
	}
}

node[name=DirectionalLight] {
	centroid: 0 10m 20m
}

.som.masthead-component {
	centroid: 0 0.2m -2m;
}

.som.views-component {
	centroid: 0 -0.3m -2m;
}

.som.about-component {
	centroid: -1.1m 0.3m 0;
	display: grid;
	grid-template: 0.2m 1.2m / 1;
}

.som.about-component > .som.image-component > .cube {
	centroid: 1.25m 0 0;
}

.som.front-component > .som.media-grid-component {
	centroid: 0.5m 0 0;
}

.som.front-component > .som.media-grid-component > .som.collection-component {
	display: grid;
	grid-template: 0.5m / 2.2m 2.2m 2.2m;
	grid-auto-rows: 0.8m;
}

